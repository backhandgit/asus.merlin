#!/bin/sh
CONFIG=$1


. /usr/sbin/helper.sh

# update lease times
sed -i 's/,86400s/,259200s/' $1

echo "dhcp-hostsfile=/etc/hosts.dhcp" >> $1
cp -p /jffs/opt/hosts.dhcp /etc

# put dnsmasq on 5353 and remove all upstream
echo "port=5353" >> $1
sed -i '/server=/d' $1
sed -i '/servers-file=/d' $1  # asus/wan/stubby config uses this

